@model UniveristyRegisterSystem.Models.Student

@{
    ViewBag.Title = "Usuń studenta";
}

<h2>Usuń studenta z bazy</h2>
<p class="error">@ViewBag.ErrorMessage</p>
<h4>Jesteś pewny że chcesz usunąć studenta z bazy? Tej operacji nie można cofnąć.</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.LastName, "Nazwisko")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.LabelFor(model => model.FirstName, "Imię")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.LabelFor(model => model.EnrollmentDate, "Data dodania")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            @Html.ActionLink("Powrót do listy", "Index")
        </div>
    }
</div>
